            <Label x:Name="lblReplaced" Content="Replaced" HorizontalAlignment="Center" VerticalAlignment="Top" Canvas.Left="396" Canvas.Top="335" Height="28" FontSize="12" Foreground="Black"/>
            <TextBox x:Name="txtRFIDCreatedAt" Height="23" Canvas.Left="116" TextWrapping="Wrap" Canvas.Top="111" Width="120"/>
            <Label x:Name="lblRFIDCreatedAt" Content="Created At" HorizontalAlignment="Center" VerticalAlignment="Top" Canvas.Left="10" Canvas.Top="111" Height="23" FontSize="12" Foreground="Black"/>
        </Canvas>


    </StackPanel>



</UserControl>